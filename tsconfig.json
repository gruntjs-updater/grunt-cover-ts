{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./tasks"
    },
    "filesGlob": [
        "./typings/tsd.d.ts",
        "./src/**/*.ts",
        "./tests/**/*.ts"
    ],
    "files": [
        "./typings/tsd.d.ts",
        "./src/cover_ts.ts"
    ]
}
